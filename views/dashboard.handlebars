<!-- WHEN I click on the dashboard option in the navigation
THEN I am taken to the dashboard and presented with any blog posts I have already created and the option to add a new blog post -->
<section class="card">
    <h2 class="card-header">Create New Post</h2>

    <form class="card-body new-post-form">
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" placeholder="enter title name" />

        <label for="blog">Blog</label>
        <input type="text" id="blog" name="blog" placeholder="enter blog content" />

        <button type="submit" class="btn add-blog w-100 text-center btn-secondary mt-3">Create</button>
    </form>
</section>

{{#if posts.length}}
<section class="dashboard-post">
    <h2>Your Posts</h2>

    {{#each posts as |post|}}

    {{> dashboard-post-info post}}

    {{/each}}

</section>
{{/if}}

<script src="/javascript/add-post.js"></script>