<article class="card">
    <h2 class="card-header">Edit Post</h2>
    <form class="card-body edit-post-form">
        <label for="post-title">Post Title</label>
        <input name="post-title" type="text" value="{{post.title}}" />

        <label for="blog" class="mt-3">Blog</label>
        <input type="text" name="blog" value="{{post.blog}}" />

        <button type="submit" class="btn add-blog w-100 text-center btn-secondary mt-3">Update Post</button>
        <button type="button" class="btn delete-post-btn w-100 text-center btn-secondary mt-3">Delete Post</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>